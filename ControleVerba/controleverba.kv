                    orientation:'vertical'
                    BoxLayout:
                        orientation:'vertical'
                        size_hint_y:None
                        height: self.minimum_height
                        id:gastos

                BoxLayout:
                    size_hint_y:None
                    height:'30sp'
                    canvas:
                        Color:
                            rgba:0,0,0,.5
                        Rectangle:
                            pos:self.x,self.y
