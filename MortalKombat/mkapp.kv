<Gerenciador>:
    Menu:
        name: 'Menu'

    Game:
        name: 'Game'

    Competitivo:
        name: 'Competitivo'

<Menu>:

    BoxLayout:
        size_hint_y: None
        height:500
        pos_hint:{'center_x':.5,'center_y':.5}
        Image:
            source:'icones/logo.png'
            allow_stretch: True
    BoxLayout:
        orientation:'vertical'
        size_hint:None, None
        spacing: 20
        width:400
        height: 160
        pos_hint:{'center_x':.5,'center_y':.5}

        Botao:
            opacity: .9
            color: 0,0,.5,1
            text:'Modo casual'
            bold:True
            font_size:30
            on_release: app.root.current = 'Game'

        Botao:
            opacity:.9
            color: 1,0,0,1
            text: 'Modo competitivo'
            bold:True
            font_size:30
            on_release: app.root.current = 'Competitivo'

        Botao:
            size_hint_x:None
            width:65
            font_size:25
            bold:True
            cor: .210,.200,.200,1
            color:0,0,0,1
#            opacity:.9
            pos_hint:{'center_x':.5}
            text:'Sair'
            on_release:root.confirmar()


