<Award>:
    MDBoxLayout:
        orientation:'vertical'
        MDToolbar:
            title:'!Premiado!'
            elevation:10
            left_action_items:[['arrow-left-thick', lambda x: root.return_home()]]
        FloatLayout:
            BoxLayout:
                size_hint_y:.3
                pos_hint:{'center_y':.9}
                canvas:
                    Color:
                        rgba:1,1,1,1
                    Rectangle:
                        size:self.size
                        pos:self.pos
                        source:'icon/vencedor.png'
            BoxLayout:
                size_hint_y:.7
                pos_hint:{'center_x':.2,'center_y':.05}
                canvas:
                    Color:
                        rgba:1,1,1,1
                    Rectangle:
                        size:self.size
                        pos:self.pos
                        source:'icon/confetes.png'

            MDLabel:
                bold:True
                markup:True
#                color:0,0,1,1
                color:.4,.4,.0,1
                font_size:'40dp'
                halign:'center'
                pos_hint:{'center_y':.6}
                outline:True
                outline_width:'2dp'
                outline_color:.0,0,0,1
                id:winner

            MDLabel:
                markup:True
                bold:True
                halign:'center'
                font_size:'40dp'
                italic:True
                pos_hint:{'center_y':.3}
                id:award

<Botao>:

    Button:
        id:botao
        size_hint:1,1
        color:0,0,.5,1
        outline:True
        font_size:'20dp'
        outline_color:1,1,1,1
        outline_width:1
        bold:True
        opacity:.80
        border:0,0,0,0
        on_release: root.press_button()
        on_press:root.popup(self)

<BotaoRed>:
    Button:
        id:botaored
        size_hint:1,1
        font_size:'20dp'
        bold:True
