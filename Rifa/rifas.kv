
<Manager>:
    Login:
        name:'login'
    Register:
        name:'register'
    Grade:
        name:'grade'
    Award:
        name:'award'


<Login>:
    MDBoxLayout:
        orientation:'vertical'
        MDToolbar
            title:'Sua Rifa'
            elevation:10
            right_action_items:[['trash-can',lambda x: root.snackbar_delet()]]
        MDBoxLayout:
            FloatLayout:
                MDLabel:
                    halign:'center'
                    pos_hint:{'center_y':.9}
                    font_size:'20dp'
                    bold:True
                    text:'Informe o nome da tabela ou \ncadastre uma!'

                MDTextFieldRect:
                    size_hint:.8,None
                    height:'40sp'
                    font_size:'20dp'
                    hint_text:'Nome'
                    pos_hint:{'center_x':.5,'center_y':.8}
                    id:text_nome_login

                BoxLayout:
                    size_hint_y:.7
#                    height:'300dp'
                    pos_hint:{'center_y':.3}
                    canvas:
                        Color:
                            rgba:1,1,1,1
                        Rectangle:
                            size:self.size
                            pos:self.pos
                            source:'icon/rifa.png'

                MDFillRoundFlatIconButton:
                    icon:'account-key-outline'
                    text:'Logar'
                    font_size:'16dp'
                    pos_hint:{'center_x':.5,'center_y':.65}
                    on_release:root.logar()

                MDLabel:
                    halign:'center'
                    font_size:'24sp'
                    pos_hint:{'center_y':.4}
                    id:warning
                MDBoxLayout:
                    size_hint:.6,None
                    height:'50dp'
                    pos_hint:{'center_x':.4,'center_y':.1}
#                    canvas:
#                        Color:
#                            rgba:0,0,1,1
#                        Rectangle:
#                            size:self.width,self.height
#                            pos:self.x,self.y
                    MDLabel:
                        font_size:'20sp'
                        pos_hint:{}
                        id:se_cadastre
                    MDIcon:
                        size_hint_x:None
                        icon:''
                        width:'20dp'
                        id:icon

                MDFloatingActionButton:
                    icon:'plus-circle-outline'
                    pos_hint:{'center_x':.8,'y':.05}
                    md_bg_color: app.theme_cls.primary_color
                    on_release: root.if_go_register()

<Register>:
    ScrollView:
        BoxLayout:
            orientation:'vertical'
            MDToolbar:
                title:'Inicie a tabela'
                elevation:10
