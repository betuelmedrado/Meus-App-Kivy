# Conteudo do Popup do button  ================
<Content>:
    orientation:'vertical'

    MDCard:
        size_hint_y:None
        height:'80dp'
        MDCard:
            padding:9
            spacing:5
            radius:11,11,11,11
            MDTextField:
                hint_text:'Nome'
                line_color_normal:1,0,0,1
                id:person
            MDTextFieldRect:
                size_hint:None,None
                width:'50dp'
                height:'30dp'
                readonly:True
                id:id_namber
    MDCard:
        orientation:'vertical'
        radius:11,11,11,11
        MDLabel
            size_hint_y:None
            height:'50dp'
            text:'Pago?'
            halign:'center'
        MDBoxLayout:
            MDBoxLayout
                orientation:'vertical'
                spacing:30
                MDLabel:
                    text:'Sim'
                    halign:'center'
                    id:sim
                MDCheckbox:
                    group:'pago'
                    on_press:root.check(sim)
            MDBoxLayout:
                orientation:'vertical'
                spacing:30
                MDLabel:
                    halign:'center'
                    text:'Não'
                    id:nao
                MDCheckbox:
                    group:'pago'
                    on_press:root.check(nao)
        Widget:
            size_hint_y:None
            height:'10dp'
        MDFillRoundFlatIconButton:
            pos_hint:{'center_x':.5}
            icon:'content-save-edit'
            text:'ADD'
            on_press:root.aperto()
            on_release:root.get_content()
        MDBoxLayout:
            size_hint_y:None
            height:'15dp'
