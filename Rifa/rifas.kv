            FloatLayout:
                MDLabel:
                    text:'Escolha o tamanho da tabela'
                    halign:'center'
                    pos_hint:{'center_y':.95}
                MDCard:
                    elevation:9
                    size_hint:.9,None
                    height:'50dp'
                    pos_hint:{'center_x':.5,'center_y':.85}
                    radius:11,11,11,11
                    BoxLayout:
                        orientation:'vertical'
    #                    size_hint_x:None
    #                    width:'100dp'
                        MDLabel:
                            text:'50'
                            halign:'center'
                            id:cinquenta
                        CheckBox:
                            color:0,0,1,1
                            group:'check'
                            id:check_cinquenta
                            on_press:root.select_val_table(cinquenta)
                    BoxLayout:
                        orientation:'vertical'
    #                    size_hint_x:None
    #                    width:'100dp'
                        MDLabel:
                            text:'100'
                            halign:'center'
                            id:cem
                        CheckBox:
                            color:0,0,1,1
                            group:'check'
                            id:check_cem
                            on_press:root.select_val_table(cem)
        # Date =================
                MDLabel:
                    text:'Escolha uma data para a prêmiação!'
                    halign:'center'
                    pos_hint:{'center_y':.73}
                MDCard:
                    size_hint:.9,None
                    height:'50dp'
                    elevation:10
                    pos_hint:{'center_x':.5,'center_y':.64}
                    padding:7
                    radius:22,22,22,22
                    Widget:
                    MDBoxLayout:
                        size_hint_x:None
                        width:'200dp'
                        spacing:11
                        MDTextFieldRect:
                            hint_text:'Dia'
                            multiline:False
                            id:day
                        MDLabel:
                            size_hint_x:None
                            width:'5dp'
                            font_size:'20dp'
                            text:'/'
                        MDTextFieldRect:
                            hint_text:'Mês'
                            multiline:False
                            id:month
                        MDLabel:
                            size_hint_x:None
                            width:'5dp'
                            font_size:'20dp'
                            text:'/'
                        MDTextFieldRect:
                            hint_text:'Ano'
                            multiline:False
                            id:year
                    Widget:

                MDLabel:
                    text:'Qual é o prêmio?'
                    halign:'center'
                    pos_hint:{'center_y':.54}
                MDCard:
                    size_hint:.9,None
                    height:'60dp'
                    elevation:10
                    pos_hint:{'center_x':.5,'center_y':.45}
                    radius:11,11,11,11
                    MDTextFieldRect:
                        id:premio

                MDCard:
                    orientation:'vertical'
                    size_hint:.9,None
                    height:'120dp'
                    pos_hint:{'center_x':.5,'center_y':.25}
                    elevation:10
                    radius:11,11,11,11
                    MDLabel:
                        text:'Cadastre uma tabela com um nome!'
                        halign:'center'
                        pos_hint:{'center_y':.6}
                    MDTextFieldRect:
                        size_hint:.8,None
                        height:'40sp'
                        font_size:'20sp'
                        hint_text:'Nome'
                        pos_hint:{'center_x':.5,'center_y':.6}
                        id:cadastro_nome
                    Widget:
                        size_hint_y:None
                        height:'10dp'

                MDFillRoundFlatIconButton:
                    elevation:9
                    icon:'table-large'
                    text:'enter'
                    pos_hint:{'center_x':.5,'center_y':.05}
                    id:bt
                    on_release:root.register()


